<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000</item>
        <item name="android:windowTranslucentStatus" >true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="PreferencesTheme">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="colorAccent">#fc4</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:colorBackground">#000</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:alertDialogTheme">@style/StyledDialog</item>
    </style>
    <style name="StyledDialog" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorSecondary">#000</item>
        <item name="android:background">#fff</item>
    </style>
</resources>
